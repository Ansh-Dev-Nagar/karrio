{
  "extends": "@karrio/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@karrio/core/*": ["./*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": [".", "./**/*.ts", "./**/*.tsx", "../ui/layouts/empty-layout.tsx"],
  "exclude": ["dist", "build", "node_modules"]
}
