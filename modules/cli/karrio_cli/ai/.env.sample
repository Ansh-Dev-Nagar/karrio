# Karrio ADK Agent Environment Configuration

# Google API Key for the ADK agent
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE

# Whether to use Vertex AI instead of standard Gemini API
# Set to TRUE if you want to use Vertex AI
GOOGLE_GENAI_USE_VERTEXAI=FALSE

# Vertex AI Project ID (required if GOOGLE_GENAI_USE_VERTEXAI=TRUE)
GOOGLE_CLOUD_PROJECT=your-project-id

# Vertex AI Location (required if GOOGLE_GENAI_USE_VERTEXAI=TRUE)
GOOGLE_CLOUD_LOCATION=us-central1

# Agent Configuration
AGENT_NAME=karrio_integration_agent
AGENT_PORT=8080

# Development Settings
DEBUG=TRUE
LOG_LEVEL=INFO

# Example usage:
# 1. Copy this file to .env in the same directory
# 2. Replace YOUR_GOOGLE_API_KEY_HERE with your actual Google API key
# 3. Run: karrio agent web
